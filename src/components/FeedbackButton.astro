---
interface Props {
  lessonTitle?: string;
  placement?: 'content-end' | 'sidebar';
}

const {
  lessonTitle = 'Lesson',
  placement = 'content-end'
} = Astro.props;

const githubRepo = 'cc4-marketing/cc4.marketing';
const feedbackTitle = `Feedback for "${lessonTitle}"`;
const feedbackUrl = `https://github.com/${githubRepo}/issues/new?title=${encodeURIComponent(feedbackTitle)}&labels=feedback`;
---

<div class={`feedback-button-wrapper feedback-${placement}`}>
  <a href={feedbackUrl} target="_blank" rel="noopener noreferrer" class="feedback-button">
    {placement === 'sidebar' ? 'üí¨ Feedback' : 'üìù Give Feedback'}
  </a>
</div>

<style>
  .feedback-button-wrapper {
    margin: 24px 0;
  }

  .feedback-content-end {
    text-align: center;
    padding: 24px 0;
    border-top: 2px solid var(--border-color);
  }

  .feedback-sidebar {
    margin-top: 16px;
  }

  .feedback-button {
    display: inline-block;
    background: var(--rust);
    color: white;
    border: 2px solid var(--rust);
    padding: 12px 28px;
    text-decoration: none;
    cursor: pointer;
    font-weight: 600;
    transition: all 0.3s ease;
    font-size: 0.95em;
    font-family: var(--font-body);
  }

  .feedback-button:hover {
    transform: translate(-3px, -3px);
    box-shadow: 6px 6px 0 var(--mustard);
    background: var(--rust);
    color: white;
  }
</style>
