---
interface Props {
  number: string;
  label: string;
}

const { number, label } = Astro.props;
---

<div class="stat-box">
  <div class="stat-number">{number}</div>
  <div class="stat-label">{label}</div>
</div>

<style>
  .stat-box {
    text-align: center;
    padding: 30px;
    background: var(--bg-secondary);
    border-radius: 0;
    position: relative;
    animation: fadeInScale 0.6s ease-out backwards;
  }

  html[data-theme="dark"] .stat-box {
    background: var(--bg-secondary);
  }

  .stat-box::before {
    content: '';
    position: absolute;
    width: 80px;
    height: 80px;
    border: 3px solid var(--mustard);
    top: -40px;
    left: 50%;
    transform: translateX(-50%);
    opacity: 0.5;
  }

  html[data-theme="dark"] .stat-box::before {
    opacity: 0.3;
  }

  .stat-number {
    font-family: var(--font-display);
    font-size: 2.8em;
    color: var(--rust);
    margin: 30px 0 12px;
  }

  .stat-label {
    color: var(--text-primary);
    font-weight: 600;
    font-size: 0.95em;
  }

  @keyframes fadeInScale {
    from { opacity: 0; transform: scale(0.95); }
    to { opacity: 1; transform: scale(1); }
  }
</style>
