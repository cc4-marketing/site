---
interface Props {
    enabled?: boolean;
    text?: string;
    linkText?: string;
    linkUrl?: string;
    storageKey?: string;
}

const {
    enabled = true,
    text = "Black Friday Deal:",
    linkText = "50% off ClaudeKit.cc",
    linkUrl = "https://claudekit.cc/?ref=BIZE9CYY",
    storageKey = "hellobar-bf-2024"
} = Astro.props;
---

{enabled && (
    <div class="hello-bar" id="hello-bar" data-storage-key={storageKey}>
        <div class="hello-bar-content">
            <span class="hello-bar-icon">ðŸ”¥</span>
            <span class="hello-bar-text">{text}</span>
            <a href={linkUrl} target="_blank" rel="noopener noreferrer" class="hello-bar-link">
                {linkText} â†’
            </a>
        </div>
        <button class="hello-bar-close" aria-label="Close banner">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
        </button>
    </div>
)}

<style>
    .hello-bar {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        background: linear-gradient(90deg, #1a1a1a 0%, #2d1f3d 100%);
        color: white;
        padding: 10px 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        z-index: 1000;
        font-size: 0.9em;
        transform: translateY(-100%);
        opacity: 0;
        transition: transform 0.3s ease, opacity 0.3s ease;
    }

    .hello-bar.visible {
        transform: translateY(0);
        opacity: 1;
    }

    .hello-bar.hiding {
        transform: translateY(-100%);
        opacity: 0;
    }

    .hello-bar-content {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .hello-bar-icon {
        font-size: 1.1em;
        animation: pulse 2s infinite;
    }

    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .hello-bar-text {
        color: rgba(255, 255, 255, 0.9);
    }

    .hello-bar-link {
        color: #00D4AA;
        font-weight: 600;
        text-decoration: none;
        transition: color 0.15s;
    }

    .hello-bar-link:hover {
        color: #00F5C4;
        text-decoration: underline;
    }

    .hello-bar-close {
        position: absolute;
        right: 16px;
        background: none;
        border: none;
        color: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        padding: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.15s;
    }

    .hello-bar-close:hover {
        color: white;
    }

    @media (max-width: 600px) {
        .hello-bar {
            padding: 10px 40px 10px 16px;
            font-size: 0.82em;
        }

        .hello-bar-content {
            flex-wrap: wrap;
            justify-content: center;
            gap: 4px 8px;
        }
    }
</style>

<script>
    const bar = document.getElementById('hello-bar');
    if (bar) {
        const storageKey = bar.dataset.storageKey || 'hellobar-dismissed';
        const isDismissed = localStorage.getItem(storageKey) === 'true';

        if (!isDismissed) {
            setTimeout(() => bar.classList.add('visible'), 100);

            const closeBtn = bar.querySelector('.hello-bar-close');
            closeBtn?.addEventListener('click', () => {
                bar.classList.add('hiding');
                bar.classList.remove('visible');
                localStorage.setItem(storageKey, 'true');
                setTimeout(() => bar.remove(), 300);
            });
        } else {
            bar.remove();
        }
    }
</script>
