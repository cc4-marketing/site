---
interface Lesson {
    slug: string;
    title: string;
}

interface Module {
    id: string;
    title: string;
    lessons: Lesson[];
}

interface Props {
    currentSlug?: string;
}

const { currentSlug } = Astro.props;

const modules: Module[] = [
    {
        id: '0',
        title: 'Module 0: Getting Started',
        lessons: [
            { slug: '0-0-introduction', title: '0.0: Introduction' },
            { slug: '0-1-installation', title: '0.1: Installation' },
            { slug: '0-2-start-clone', title: '0.2: Start & Clone' },
        ]
    },
    {
        id: '1',
        title: 'Module 1: Fundamentals',
        lessons: [
            { slug: '1-1-welcome', title: '1.1: Welcome' },
            { slug: '1-2-visualizing-files', title: '1.2: Visualizing Files' },
            { slug: '1-3-first-tasks', title: '1.3: First Tasks' },
            { slug: '1-4-agents', title: '1.4: Agents' },
            { slug: '1-5-custom-subagents', title: '1.5: Custom Sub-agents' },
            { slug: '1-6-project-memory', title: '1.6: Project Memory' },
            { slug: '1-7-navigation', title: '1.7: Navigation' },
        ]
    },
    {
        id: '2',
        title: 'Module 2: Advanced PM Work',
        lessons: [
            { slug: '2-1-campaign-brief', title: '2.1: Campaign Brief' },
            { slug: '2-2-content-strategy', title: '2.2: Content Strategy' },
            { slug: '2-3-marketing-copy', title: '2.3: Marketing Copy' },
            { slug: '2-4-analytics', title: '2.4: Analytics' },
            { slug: '2-5-competitive-analysis', title: '2.5: Competitive Analysis' },
            { slug: '2-6-seo-optimization', title: '2.6: SEO Optimization' },
        ]
    }
];

function isModuleActive(module: Module): boolean {
    return module.lessons.some(lesson => lesson.slug === currentSlug);
}
---

<nav class="course-nav">
    <div class="nav-header">
        <a href="/" class="nav-logo">CC4 Marketing</a>
    </div>

    <a href="/" class="nav-home">Home</a>

    {modules.map(module => (
        <div class={`module-group ${isModuleActive(module) ? 'expanded' : ''}`}>
            <div class={`module-header ${isModuleActive(module) ? 'active' : ''}`}>
                {module.title}
                <svg class="module-chevron" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 18l6-6-6-6"/>
                </svg>
            </div>
            <div class="module-lessons">
                {module.lessons.map(lesson => (
                    <a 
                        href={`/lessons/${lesson.slug}`} 
                        class={`lesson-link ${lesson.slug === currentSlug ? 'active' : ''}`}
                    >
                        {lesson.title}
                    </a>
                ))}
            </div>
        </div>
    ))}
</nav>

<style>
    .course-nav {
        position: fixed;
        left: 0;
        top: 0;
        width: var(--sidebar-width);
        height: 100vh;
        background: var(--cream);
        border-right: 1px solid rgba(0,0,0,0.06);
        overflow-y: auto;
        padding: 24px 0;
        z-index: 50;
    }

    .course-nav::-webkit-scrollbar {
        width: 4px;
    }

    .course-nav::-webkit-scrollbar-thumb {
        background: rgba(0,0,0,0.1);
        border-radius: 2px;
    }

    .nav-header {
        padding: 0 20px 20px;
        margin-bottom: 8px;
    }

    .nav-logo {
        font-family: 'Righteous', serif;
        font-size: 1.1em;
        color: var(--plum);
    }

    .nav-home {
        display: block;
        padding: 10px 20px;
        color: var(--text-muted);
        font-size: 0.9em;
        transition: color 0.15s;
    }

    .nav-home:hover {
        color: var(--text);
    }

    .module-group {
        margin-bottom: 4px;
    }

    .module-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 10px 20px;
        cursor: pointer;
        color: var(--text-muted);
        font-size: 0.85em;
        font-weight: 500;
        transition: all 0.15s;
    }

    .module-header:hover {
        color: var(--text);
    }

    .module-header.active {
        color: var(--text);
    }

    .module-chevron {
        width: 14px;
        height: 14px;
        opacity: 0.4;
        transition: transform 0.2s;
    }

    .module-group.expanded .module-chevron {
        transform: rotate(90deg);
    }

    .module-lessons {
        display: none;
        padding-bottom: 8px;
    }

    .module-group.expanded .module-lessons {
        display: block;
    }

    .lesson-link {
        display: block;
        padding: 7px 20px 7px 32px;
        color: var(--text-muted);
        font-size: 0.85em;
        transition: all 0.15s;
        border-left: 2px solid transparent;
    }

    .lesson-link:hover {
        color: var(--text);
    }

    .lesson-link.active {
        color: var(--plum);
        border-left-color: var(--accent);
        background: linear-gradient(90deg, rgba(0, 212, 170, 0.06), transparent);
    }

    @media (max-width: 800px) {
        .course-nav {
            transform: translateX(-100%);
            transition: transform 0.3s;
        }
        .course-nav.open {
            transform: translateX(0);
        }
    }
</style>

<script>
    document.querySelectorAll('.module-header').forEach(header => {
        header.addEventListener('click', () => {
            header.parentElement?.classList.toggle('expanded');
        });
    });
</script>
