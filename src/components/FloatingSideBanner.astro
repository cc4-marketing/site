---
interface Props {
    enabled?: boolean;
    title?: string;
    subtitle?: string;
    linkText?: string;
    linkUrl?: string;
    triggerPercent?: number;
}

const {
    enabled = true,
    title = "Black Friday",
    subtitle = "50% off ClaudeKit.cc",
    linkText = "Grab Deal",
    linkUrl = "https://claudekit.cc/?ref=BIZE9CYY",
    triggerPercent = 70
} = Astro.props;
---

{enabled && (
    <div class="floating-banner" id="floating-banner" data-trigger={triggerPercent}>
        <div class="floating-banner-content">
            <div class="floating-banner-badge">ðŸ”¥ LIMITED</div>
            <div class="floating-banner-title">{title}</div>
            <div class="floating-banner-subtitle">{subtitle}</div>
            <a href={linkUrl} target="_blank" rel="noopener noreferrer" class="floating-banner-btn">
                {linkText} â†’
            </a>
        </div>
        <button class="floating-banner-close" aria-label="Close">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 6L6 18M6 6l12 12"/>
            </svg>
        </button>
    </div>
)}

<style>
    .floating-banner {
        position: fixed;
        right: 20px;
        bottom: 20px;
        background: linear-gradient(135deg, #1a1a1a 0%, #2d1f3d 100%);
        color: white;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        z-index: 999;
        max-width: 200px;
        transform: translateX(120%);
        opacity: 0;
        transition: transform 0.4s ease, opacity 0.4s ease;
    }

    .floating-banner.visible {
        transform: translateX(0);
        opacity: 1;
    }

    .floating-banner.hiding {
        transform: translateX(120%);
        opacity: 0;
    }

    .floating-banner-content {
        text-align: center;
    }

    .floating-banner-badge {
        display: inline-block;
        background: #E8B923;
        color: #1a1a1a;
        font-size: 0.65em;
        font-weight: 700;
        padding: 3px 8px;
        border-radius: 4px;
        margin-bottom: 10px;
        letter-spacing: 0.05em;
    }

    .floating-banner-title {
        font-family: 'Righteous', serif;
        font-size: 1.3em;
        margin-bottom: 4px;
    }

    .floating-banner-subtitle {
        font-size: 0.85em;
        color: rgba(255, 255, 255, 0.8);
        margin-bottom: 14px;
    }

    .floating-banner-btn {
        display: block;
        background: #00D4AA;
        color: #1a1a1a;
        padding: 10px 16px;
        border-radius: 6px;
        font-weight: 600;
        font-size: 0.85em;
        text-decoration: none;
        transition: background 0.15s, transform 0.15s;
    }

    .floating-banner-btn:hover {
        background: #00F5C4;
        transform: translateY(-1px);
    }

    .floating-banner-close {
        position: absolute;
        top: 8px;
        right: 8px;
        background: rgba(255, 255, 255, 0.1);
        border: none;
        color: rgba(255, 255, 255, 0.5);
        cursor: pointer;
        padding: 4px;
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.15s;
    }

    .floating-banner-close:hover {
        background: rgba(255, 255, 255, 0.2);
        color: white;
    }

    @media (max-width: 600px) {
        .floating-banner {
            right: 12px;
            bottom: 12px;
            max-width: 180px;
            padding: 16px;
        }
    }
</style>

<script>
    const banner = document.getElementById('floating-banner');
    if (banner) {
        const triggerPercent = parseInt(banner.dataset.trigger || '70', 10);
        let shown = false;
        let closed = false;

        const checkScroll = () => {
            if (closed) return;

            const scrollTop = window.scrollY;
            const docHeight = document.documentElement.scrollHeight - window.innerHeight;
            const scrollPercent = (scrollTop / docHeight) * 100;

            if (scrollPercent >= triggerPercent && !shown) {
                shown = true;
                banner.classList.add('visible');
            }
        };

        window.addEventListener('scroll', checkScroll, { passive: true });

        const closeBtn = banner.querySelector('.floating-banner-close');
        closeBtn?.addEventListener('click', () => {
            closed = true;
            banner.classList.add('hiding');
            banner.classList.remove('visible');
            setTimeout(() => banner.remove(), 400);
        });

        checkScroll();
    }
</script>
