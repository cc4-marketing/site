<style>
  .footer {
    background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(255, 136, 102, 0.03) 100%);
    color: var(--text-primary);
    padding: 60px 24px;
    border-top: 1px solid var(--border-color);
    font-size: 0.95em;
  }

  html[data-theme="dark"] .footer {
    background: linear-gradient(135deg, var(--bg-primary) 0%, rgba(255, 136, 102, 0.05) 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Main Footer Layout */
  .footer-main {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  /* Branding Section */
  .footer-brand h3 {
    font-family: var(--font-display);
    font-size: 1.3em;
    color: var(--rust);
    margin: 0 0 8px 0;
    font-weight: 600;
  }

  .footer-brand p {
    margin: 0;
    font-size: 0.85em;
    color: var(--text-secondary);
  }

  /* Support Section */
  .footer-support {
    text-align: right;
  }

  .support-headline {
    margin: 0 0 16px 0;
    font-size: 0.85em;
    font-weight: 600;
    color: var(--rust);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .support-buttons {
    display: flex;
    gap: 12px;
    justify-content: flex-end;
    flex-direction: column;
    align-items: flex-end;
  }

  .support-btn {
    display: inline-flex;
    align-items: center;
    gap: 12px;
    padding: 12px 16px;
    border: 2px solid var(--border-color);
    background: transparent;
    text-decoration: none;
    transition: all 0.3s ease;
    color: var(--text-primary);
  }

  .support-btn:hover {
    border-color: var(--rust);
    background: rgba(255, 136, 102, 0.1);
    transform: translate(-2px, -2px);
  }

  .support-icon {
    font-size: 1.4em;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .support-text {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .support-text strong {
    font-size: 0.95em;
    color: var(--text-primary);
  }

  .support-text small {
    font-size: 0.75em;
    color: var(--text-secondary);
  }

  .support-btn.paypal {
    --btn-color: #0070BA;
  }

  .support-btn.kofi {
    --btn-color: #13C3FF;
  }

  .support-btn:hover .support-icon {
    transform: scale(1.15);
  }

  /* Mobile */
  @media (max-width: 768px) {
    .footer {
      padding: 40px 20px;
    }

    .footer-main {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .footer-support {
      text-align: center;
    }

    .support-buttons {
      justify-content: center;
      flex-direction: row;
      align-items: center;
    }

    .support-btn {
      padding: 10px 14px;
      flex-direction: column;
      align-items: center;
      text-align: center;
    }

    .support-text {
      display: block;
    }

    .support-text strong {
      font-size: 0.9em;
    }

    .support-text small {
      display: none;
    }
  }
</style>
