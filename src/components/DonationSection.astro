---
interface Props {
  showOnHomepage?: boolean;
}

const { showOnHomepage = false } = Astro.props;

const paypalLink = 'https://paypal.me/MinhTriVo?locale.x=en_US&country.x=VN';
const kofiId = 'L3L61PX2L8';
---

<section class="donation-section" class:list={[showOnHomepage && 'donation-homepage']}>
  <div class="container">
    <div class="donation-content">
      <div class="donation-header">
        <h3>Support the Course Creator</h3>
        <p class="donation-subtitle">Enjoying the course? Buy me a coffee or support ongoing development.</p>
      </div>

      <div class="donation-methods">
        <!-- PayPal Button -->
        <div class="donation-method paypal">
          <div class="method-icon">ðŸ›’</div>
          <h4>PayPal Donation</h4>
          <p>Support with a one-time donation</p>
          <a href={paypalLink} target="_blank" rel="noopener noreferrer" class="donation-btn paypal-btn">
            Donate with PayPal â†’
          </a>
        </div>

        <!-- Ko-fi Button -->
        <div class="donation-method kofi">
          <div class="method-icon">â˜•</div>
          <h4>Ko-fi Support</h4>
          <p>Buy me a coffee or send a tip</p>
          <a href="https://ko-fi.com/L3L61PX2L8" target="_blank" rel="noopener noreferrer" class="donation-btn kofi-btn">
            Support on Ko-fi â†’
          </a>
        </div>
      </div>

      <p class="donation-note">
        All donations help fund course improvements, new content, and better tools for learning.
      </p>
    </div>
  </div>
</section>

<style>
  .donation-section {
    background: var(--bg-secondary);
    border-top: 2px solid var(--border-color);
    border-bottom: 2px solid var(--border-color);
    padding: 48px 0;
    margin: 60px 0;
  }

  .donation-homepage {
    margin: 80px 0 0 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-lg);
  }

  .donation-content {
    text-align: center;
    max-width: 700px;
    margin: 0 auto;
  }

  .donation-header {
    margin-bottom: 48px;
  }

  .donation-header h3 {
    font-size: 2em;
    color: var(--text-primary);
    margin-bottom: 12px;
  }

  .donation-subtitle {
    font-size: 1.1em;
    color: var(--text-secondary);
    margin: 0;
  }

  .donation-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 32px;
    margin-bottom: 32px;
  }

  .donation-method {
    padding: 32px;
    background: var(--bg-primary);
    border: 2px solid var(--border-color);
    border-radius: 8px;
    transition: all 0.3s ease;
  }

  .donation-method:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    border-color: var(--rust);
  }

  .method-icon {
    font-size: 2.5em;
    margin-bottom: 16px;
  }

  .donation-method h4 {
    font-size: 1.3em;
    color: var(--text-primary);
    margin: 16px 0 8px 0;
  }

  .donation-method p {
    color: var(--text-secondary);
    margin: 0 0 20px 0;
    font-size: 0.95em;
  }

  .donation-btn {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
    font-size: 0.95em;
  }

  .paypal-btn {
    background: #0070BA;
    color: white;
  }

  .paypal-btn:hover {
    background: #005EA6;
    transform: translateY(-2px);
  }

  .kofi-btn {
    background: #13C3FF;
    color: white;
  }

  .kofi-btn:hover {
    background: #00B8E6;
    transform: translateY(-2px);
  }

  .donation-note {
    font-size: 0.9em;
    color: var(--text-secondary);
    margin: 0;
    font-style: italic;
  }

  @media (max-width: 600px) {
    .donation-section {
      padding: 32px 0;
      margin: 40px 0;
    }

    .donation-header h3 {
      font-size: 1.6em;
    }

    .donation-methods {
      gap: 20px;
    }

    .donation-method {
      padding: 24px;
    }

    .donation-btn {
      width: 100%;
      box-sizing: border-box;
    }
  }
</style>
