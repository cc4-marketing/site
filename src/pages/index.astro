---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Hero from '../components/Hero.astro';
import FeatureCard from '../components/FeatureCard.astro';
import ModuleCard from '../components/ModuleCard.astro';
import StatBox from '../components/StatBox.astro';

const features = [
  { icon: 'âš¡', title: '10x Speed', description: 'Campaign briefs in minutes instead of hours. Generate content at scale without losing quality.' },
  { icon: 'ðŸŽ¯', title: 'Consistent Brand', description: 'AI agents enforce brand voice across all materials. No more tone inconsistency.' },
  { icon: 'ðŸ“Š', title: 'Data Insights', description: 'Analyze campaign performance instantly. Turn data into actionable strategy.' },
  { icon: 'ðŸš€', title: 'More Campaigns', description: 'Ship 5x more campaigns. Focus on strategy while AI handles execution.' },
  { icon: 'ðŸ¤–', title: 'Custom Agents', description: 'Build your own AI team. Brand guardian, SEO specialist, copywriter.' },
  { icon: 'ðŸ“ˆ', title: 'Compound Growth', description: 'Every campaign gets faster. Every project builds on the last.' },
];

const modules = [
  {
    number: 0,
    title: 'Getting Started',
    description: 'Install Claude Code and get your first taste of AI-powered marketing.',
    lessonCount: '3 Lessons â€¢ 30 minutes',
    lessons: ['Introduction', 'Installation', 'First Task'],
    href: '/modules/0/introduction'
  },
  {
    number: 1,
    title: 'Core Concepts',
    description: 'Master AI agents, sub-agents, and real marketing workflows with Markit agency.',
    lessonCount: '7 Lessons â€¢ 3-4 hours',
    lessons: ['Welcome to Markit', 'Working with Files', 'First Tasks', '+ 4 more lessons'],
    href: '/modules/1/welcome'
  },
  {
    number: 2,
    title: 'Advanced Apps',
    description: 'Execute real campaigns for Planerio. Strategy to analytics.',
    lessonCount: '6 Lessons â€¢ 4-5 hours',
    lessons: ['Campaign Briefs', 'Content Strategy', 'Marketing Copy', '+ 3 more lessons'],
    href: '/modules/2/campaign-brief'
  },
];

const stats = [
  { number: '10x', label: 'Campaign Speed' },
  { number: '5x', label: 'Monthly Output' },
  { number: '+65%', label: 'Quality Scores' },
  { number: '89%', label: 'Consistency' },
];
---

<BaseLayout title="Claude Code for Marketers" description="Master AI-powered marketing workflows. Work 10x faster. Ship more campaigns.">
  <Header />
  
  <Hero
    title="Claude Code for Marketers"
    subtitle="Learn IN Claude Code. Work 10x Faster."
    description="This course is taught entirely inside Claude Code. You'll install it, clone the repo, then type /start-0-0 to begin. Claude guides you through each lesson interactively."
    primaryCta={{ label: 'Download Course â†’', href: '/download' }}
    secondaryCta={{ label: 'Browse Docs', href: '#modules' }}
  />

  <!-- How It Works Section -->
  <section class="how-it-works-section" id="how-it-works">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Interactive Learning</div>
        <h2 class="section-title">Learn IN Claude Code!</h2>
        <p class="section-description">This course is taught entirely inside Claude Code itself.</p>
      </div>

      <div class="how-it-works-grid">
        <div class="how-step">
          <div class="step-number">1</div>
          <h3>Download & Install</h3>
          <p>Get Claude Code installed and clone the course repository to your computer.</p>
        </div>
        <div class="how-step">
          <div class="step-number">2</div>
          <h3>Type /start-0-0</h3>
          <p>Open Claude Code in the course folder and type <code>/start-0-0</code> to begin.</p>
        </div>
        <div class="how-step">
          <div class="step-number">3</div>
          <h3>Learn by Doing</h3>
          <p>Claude guides you through each lesson. You create real marketing files as you learn.</p>
        </div>
      </div>

      <div class="practice-project">
        <h3>Your Practice Project: Markit Agency</h3>
        <p>You'll play the role of Marketing Strategist at <strong>Markit</strong>, working on campaigns for your client <strong>Planerio</strong> (a B2B team productivity SaaS).</p>
        <div class="project-features">
          <span>Campaign Briefs</span>
          <span>Content Strategy</span>
          <span>Multi-Channel Copy</span>
          <span>Competitive Analysis</span>
          <span>SEO Optimization</span>
          <span>Custom AI Reviewers</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="features-section" id="features">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Core Skills</div>
        <h2 class="section-title">What You'll Master</h2>
        <p class="section-description">The exact skills that transform marketing teams into 10x performers.</p>
      </div>

      <div class="features-grid">
        {features.map((feature, i) => (
          <FeatureCard 
            icon={feature.icon} 
            title={feature.title} 
            description={feature.description}
            style={`animation-delay: ${i * 0.1}s`}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Modules Section -->
  <section class="modules-section" id="modules">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Three Modules</div>
        <h2 class="section-title">Your Learning Path</h2>
        <p class="section-description">Master AI-powered marketing in 2 weeks. Three modules. 18 lessons. Real transformations.</p>
      </div>

      <div class="modules-grid">
        {modules.map((module, i) => (
          <ModuleCard 
            number={module.number}
            title={module.title}
            description={module.description}
            lessonCount={module.lessonCount}
            lessons={module.lessons}
            href={module.href}
            style={`animation-delay: ${i * 0.1}s`}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="stats-section">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Proven Results</div>
        <h2 class="section-title">Real Impact</h2>
        <p class="section-description">Measurable results from marketers who've completed the course.</p>
      </div>

      <div class="stats-grid">
        {stats.map((stat, i) => (
          <StatBox 
            number={stat.number} 
            label={stat.label}
            style={`animation-delay: ${i * 0.1}s`}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="cta-section">
    <div class="container">
      <h2>Ready to Transform Your Marketing?</h2>
      <p>Start with Module 0 today. Master Claude Code in 2 weeks. Join hundreds of marketers shipping faster.</p>
      <a href="/modules/0/introduction" class="cta-button">Begin Course â†’</a>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  /* How It Works Section */
  .how-it-works-section {
    background: var(--cream);
    border-bottom: 4px solid var(--olive);
  }

  .how-it-works-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    margin-top: 50px;
  }

  .how-step {
    text-align: center;
    padding: 30px;
    background: white;
    border: 3px solid var(--charcoal);
    box-shadow: 8px 8px 0 var(--charcoal);
  }

  .step-number {
    width: 60px;
    height: 60px;
    background: var(--mustard);
    color: var(--charcoal);
    font-family: var(--font-display);
    font-size: 1.8em;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
    border: 3px solid var(--charcoal);
  }

  .how-step h3 {
    font-family: var(--font-display);
    font-size: 1.3em;
    margin-bottom: 10px;
    color: var(--charcoal);
  }

  .how-step p {
    color: var(--charcoal);
    line-height: 1.6;
  }

  .how-step code {
    background: var(--olive);
    color: white;
    padding: 2px 8px;
    font-family: monospace;
    font-size: 0.95em;
  }

  .practice-project {
    margin-top: 60px;
    padding: 40px;
    background: var(--olive);
    color: white;
    text-align: center;
    border: 3px solid var(--charcoal);
    box-shadow: 10px 10px 0 var(--charcoal);
  }

  .practice-project h3 {
    font-family: var(--font-display);
    font-size: 1.6em;
    margin-bottom: 15px;
  }

  .practice-project p {
    max-width: 600px;
    margin: 0 auto 25px;
    line-height: 1.7;
  }

  .project-features {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 12px;
  }

  .project-features span {
    background: rgba(255, 255, 255, 0.2);
    padding: 8px 16px;
    font-size: 0.9em;
    border: 1px solid rgba(255, 255, 255, 0.3);
  }

  /* Features Section */
  .features-section {
    background: white;
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 40px;
    margin-top: 60px;
  }

  /* Modules Section */
  .modules-section {
    background: linear-gradient(135deg, var(--plum) 0%, #3F2C5C 100%);
    color: white;
    position: relative;
    overflow: hidden;
  }

  .modules-section::before {
    content: '';
    position: absolute;
    width: 300px;
    height: 300px;
    border: 2px dashed rgba(232, 185, 35, 0.3);
    border-radius: 50%;
    top: 50px;
    right: 50px;
  }

  .modules-section::after {
    content: '';
    position: absolute;
    width: 200px;
    height: 2px;
    background: var(--mustard);
    opacity: 0.3;
    bottom: 100px;
    left: 0;
  }

  .modules-section .section-title,
  .modules-section .section-description {
    color: white;
    position: relative;
    z-index: 1;
  }

  .modules-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 30px;
    margin-top: 60px;
    position: relative;
    z-index: 1;
  }

  /* Stats Section */
  .stats-section {
    background: white;
    padding: 80px 0;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
    margin-top: 60px;
  }

  /* Final CTA */
  .cta-section {
    background: linear-gradient(135deg, var(--rust) 0%, #A04A2F 100%);
    color: white;
    padding: 100px 24px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .cta-section::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    border: 2px dashed rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    top: -200px;
    right: -200px;
  }

  .cta-section h2 {
    font-family: var(--font-display);
    font-size: 2.8em;
    margin-bottom: 20px;
    position: relative;
    z-index: 1;
    line-height: 1.2;
  }

  .cta-section p {
    font-size: 1.15em;
    margin-bottom: 40px;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
    z-index: 1;
    line-height: 1.7;
  }

  .cta-button {
    background: var(--mustard);
    color: var(--charcoal);
    padding: 18px 48px;
    font-size: 1.1em;
    font-weight: 700;
    border: none;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    position: relative;
    z-index: 1;
    font-family: var(--font-display);
    box-shadow: 10px 10px 0 rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }

  .cta-button:hover {
    transform: translate(-5px, -5px);
    box-shadow: 15px 15px 0 rgba(0, 0, 0, 0.2);
    color: var(--charcoal);
  }

  @media (max-width: 768px) {
    .how-it-works-grid {
      grid-template-columns: 1fr;
    }

    .features-grid,
    .modules-grid,
    .stats-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .cta-section h2 {
      font-size: 2em;
    }

    .project-features {
      flex-direction: column;
      align-items: center;
    }
  }
</style>
