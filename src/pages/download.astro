---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="Subscribe | Claude Code for Marketers" description="Subscribe for course updates and bonus content">
  <Header />
  
  <section class="download-section">
    <div class="container">
      <div class="download-card" id="email-form-card">
        <div class="download-icon">ðŸ“§</div>
        <h1>Subscribe for Course Updates</h1>
        <p class="download-description">
          Join the CC4 Marketing list for new lessons, practical playbooks, and bonus content.
        </p>

        <ul class="signup-list">
          <li>Short, tactical emails you can apply the same day</li>
          <li>Early access to new modules and worksheets</li>
          <li>Zero fluff. Unsubscribe anytime.</li>
        </ul>

        <form
          class="signup-form"
          action="https://cc4marketing.substack.com/subscribe"
          method="get"
          target="_blank"
          rel="noopener"
        >
          <label for="email-input" class="signup-label">Email address</label>
          <div class="signup-row">
            <input
              type="email"
              name="email"
              id="email-input"
              placeholder="you@company.com"
              required
              class="signup-input"
            />
            <button type="submit" class="signup-button">
              Join free list â†’
            </button>
          </div>
          <p class="form-note">Opens Substack in a new tab to confirm your subscription.</p>
        </form>
        
        <p class="privacy-note">
          No spam, ever. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </section>

  <Footer />
</BaseLayout>

<style>
  .download-section {
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
    background:
      radial-gradient(circle at 15% 20%, rgba(232, 185, 35, 0.18), transparent 45%),
      radial-gradient(circle at 85% 10%, rgba(184, 92, 60, 0.16), transparent 50%),
      linear-gradient(135deg, var(--bg-primary) 0%, var(--cream) 100%);
    padding: 60px 24px;
  }

  .download-card {
    background: var(--bg-secondary);
    border: 4px solid var(--border-color);
    box-shadow: 12px 12px 0 var(--border-color);
    padding: 60px;
    max-width: 520px;
    text-align: center;
    position: relative;
  }

  .download-card.hidden {
    display: none;
  }

  .download-icon {
    font-size: 4em;
    margin-bottom: 20px;
  }

  .download-card h1 {
    font-family: var(--font-display);
    font-size: 2.2em;
    color: var(--charcoal);
    margin-bottom: 15px;
  }

  .download-description {
    color: var(--text-secondary);
    line-height: 1.7;
    margin-bottom: 30px;
  }

  .signup-list {
    text-align: left;
    list-style: none;
    padding: 0;
    margin: 0 0 28px;
    color: var(--text-primary);
  }

  .signup-list li {
    position: relative;
    padding-left: 26px;
    margin-bottom: 12px;
    line-height: 1.5;
  }

  .signup-list li::before {
    content: 'âœ“';
    position: absolute;
    left: 0;
    top: 0;
    color: var(--olive);
    font-weight: 700;
  }

  .signup-form {
    margin-top: 10px;
    background: var(--bg-primary);
    border: 3px solid var(--border-color);
    box-shadow: 8px 8px 0 var(--border-color);
    padding: 20px;
    text-align: left;
  }

  .signup-label {
    display: block;
    font-size: 0.9em;
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .signup-row {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 12px;
  }

  .signup-input {
    padding: 14px 16px;
    font-size: 1em;
    border: 3px solid var(--border-color);
    background: var(--bg-secondary);
    color: var(--text-primary);
    font-family: var(--font-body);
  }

  .signup-input:focus {
    outline: none;
    border-color: var(--olive);
  }

  .signup-button {
    padding: 14px 20px;
    font-size: 1em;
    font-weight: 700;
    font-family: var(--font-display);
    background: var(--mustard);
    color: var(--ink-on-mustard);
    border: 3px solid var(--border-color);
    cursor: pointer;
    box-shadow: 4px 4px 0 var(--border-color);
    transition: all 0.2s ease;
  }

  .signup-button:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0 var(--border-color);
  }

  .form-note {
    font-size: 0.8em;
    color: var(--text-secondary);
    margin-top: 12px;
  }

  .privacy-note {
    font-size: 0.85em;
    color: var(--text-secondary);
    margin-top: 20px;
  }

  @media (max-width: 600px) {
    .download-card {
      padding: 40px 25px;
    }

    .download-card h1 {
      font-size: 1.8em;
    }

    .signup-row {
      grid-template-columns: 1fr;
    }

  }

  html[data-theme="dark"] .download-section {
    background:
      radial-gradient(circle at 20% 20%, rgba(255, 209, 71, 0.12), transparent 45%),
      radial-gradient(circle at 80% 15%, rgba(255, 136, 102, 0.12), transparent 50%),
      linear-gradient(135deg, #101010 0%, #1A1A1A 100%);
  }
</style>
